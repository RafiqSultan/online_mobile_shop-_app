<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CartActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warm_red"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_bar"
        app:title="Checkout"
        app:titleTextColor="@color/white"/>
    <!--    left icon -->


    <!--    Cart-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/card_view_border"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/iph_13" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Iphone 13 pro max"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#111"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="3000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/warm_blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_add_circle_outline_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_remove_circle_outline_24" />
                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-10dp"
                android:gravity="center_horizontal"
                app:tint="@color/warm_red"
                android:src="@drawable/outline_delete_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/card_view_border"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/power" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Power bank"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#111"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="300"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/warm_blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_add_circle_outline_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_remove_circle_outline_24" />
                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-10dp"
                android:gravity="center_horizontal"
                app:tint="@color/warm_red"
                android:src="@drawable/outline_delete_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/card_view_border"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/airpods" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Air pods"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#111"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="240"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/warm_blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_add_circle_outline_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_remove_circle_outline_24" />
                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-10dp"
                android:gravity="center_horizontal"
                app:tint="@color/warm_red"
                android:src="@drawable/outline_delete_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="100dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/card_view_border"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/charge" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Charge  25wt"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#111"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="90"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/warm_blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_add_circle_outline_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="20dp"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#00f"
                        android:src="@drawable/outline_remove_circle_outline_24" />
                </LinearLayout>


            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="-10dp"
                android:gravity="center_horizontal"
                app:tint="@color/warm_red"
                android:src="@drawable/outline_delete_24" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

<!--    Checkout-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="150dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:text="Total :"
                android:textColor="#111"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="30dp"
                android:text="3630 SAR"
                android:textColor="@color/warm_red"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Checkout"
            android:onClick="goToPayment"
                android:backgroundTint="@color/warm_red"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="bottom"/>



    </androidx.cardview.widget.CardView>












</LinearLayout>